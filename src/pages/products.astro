---
import BaseLayout from '../layouts/BaseLayout.astro';

const products = [
  { id: 1, name: "Premium Rice", image: "/rice1.jpg", description: "Best quality rice." },
  { id: 2, name: "Organic Rice", image: "/rice2.jpg", description: "Eco-friendly and healthy." },
  { id: 3, name: "Brown Rice", image: "/rice3.jpg", description: "Nutritious and delicious." },
];
---
<html lang="en">
<head>
  <title>Products</title>
</head>
<body>
  <h1 class="text-center text-3xl font-bold my-8">Our Products</h1>
  <div class="grid grid-cols-2 gap-6 mx-auto max-w-4xl">
    {products.map((product) => (
      <div key={product.id} class="border p-4">
        <img src={product.image} alt={product.name} class="w-full" />
        <h2 class="text-xl font-semibold mt-2">{product.name}</h2>
        <p>{product.description}</p>
      </div>
    ))}
  </div>
  <BaseLayout title="Our Products" description="Discover our range of high-quality rice products.">
    <h1 class="text-3xl font-bold text-center mb-8">Our Products</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {products.map(product => (
        <div key={product.id} class="bg-white rounded-lg shadow-md overflow-hidden">
          <img src={product.image} alt={product.name} class="w-full h-48 object-cover" />
          <div class="p-4">
            <h2 class="text-xl font-semibold">{product.name}</h2>
            <p class="mt-2 text-gray-600">{product.description}</p>
          </div>
        </div>
      ))}
    </div>
  </BaseLayout>
</body>
</html>
